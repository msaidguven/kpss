<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="30dp"
    android:paddingBottom="10dp"
    android:background="@color/teal_200"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView_menuName"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        android:textSize="22sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_menuSoruSayisi"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/textView_menuName" />

    <TextView
        android:id="@+id/textView_uyeDogruCevapSayisi"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/textView_uyeYanlisCevapSayisi"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toEndOf="@+id/textView_menuSoruSayisi"
        app:layout_constraintTop_toTopOf="@+id/textView_menuSoruSayisi" />

    <TextView
        android:id="@+id/textView_uyeYanlisCevapSayisi"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_menuSoruSayisi" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="#53EF41"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/textView_uyeDogruCevapSayisi"
        app:layout_constraintTop_toTopOf="@+id/textView_menuSoruSayisi"
        app:srcCompat="@drawable/icon_dogru" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="#FF0000"
        app:layout_constraintEnd_toStartOf="@+id/textView_uyeYanlisCevapSayisi"
        app:layout_constraintTop_toTopOf="@+id/textView_menuSoruSayisi"
        app:srcCompat="@drawable/icon_yanlis" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="#169BFF"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_menuSoruSayisi"
        app:srcCompat="@drawable/icon_soru" />
</androidx.constraintlayout.widget.ConstraintLayout>